# ===================================
# DISCORD BOT CONFIGURATION
# ===================================

# Your Discord Bot Token
# Get from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_bot_token_here

# Discord Token (alternative name for compatibility)
DISCORD_TOKEN=your_bot_token_here

# ===================================
# TASTYTRADE DISCORD (SOURCE)
# ===================================

# Tastytrade Discord Server ID (where you receive signals from)
# Right-click server icon → Copy ID (requires Developer Mode)
TASTYTRADE_SERVER_ID=1234567890123456789

# Tastytrade Signal Channel ID (their signals channel)
# Right-click channel → Copy ID
TASTYTRADE_SIGNAL_CHANNEL_ID=9876543210987654321

# ===================================
# YOUR DISCORD SERVER (DESTINATION)
# ===================================

# Your Discord Server ID
YOUR_SERVER_ID=1111222233334444555

# Tiered Signal Channels
# VIP (Gold) - Gets ALL signals
VIP_CHANNEL_ID=1111111111111111111

# Premium (Silver) - Gets high/medium confidence signals
PREMIUM_CHANNEL_ID=2222222222222222222

# Basic (Bronze) - Gets high confidence major symbols only
BASIC_CHANNEL_ID=3333333333333333333

# Optional: Separate channels for fill notifications
# If not set, fills will be posted to the signal channels above
VIP_FILLS_CHANNEL_ID=4444444444444444444
PREMIUM_FILLS_CHANNEL_ID=5555555555555555555
BASIC_FILLS_CHANNEL_ID=6666666666666666666

# ===================================
# TASTYTRADE API CREDENTIALS
# ===================================

# Environment: 'production' or 'sandbox' (default: sandbox)
TASTYTRADE_ENV=sandbox

# Session-based Authentication (deprecated but still works)
TASTYTRADE_USERNAME=your_username
TASTYTRADE_PASSWORD=your_password

# OR OAuth Authentication (recommended)
TASTYTRADE_CLIENT_SECRET=your_client_secret
TASTYTRADE_REFRESH_TOKEN=your_refresh_token

# Your Tastytrade Account Number
TASTYTRADE_ACCOUNT_NUMBER=5WT00000

# ===================================
# AUTO-TRADE SETTINGS
# ===================================

# Enable automatic trade execution (true/false)
AUTO_TRADE_ENABLED=false

# Queue Configuration Profile
# Options: aggressive, balanced, conservative
QUEUE_CONFIG_PROFILE=balanced

# ===================================
# POSITION SIZING
# ===================================

# Position sizing method: fixed, multiplier, percentage
POSITION_SIZING_METHOD=fixed

# Fixed quantity (if using fixed method)
FIXED_QUANTITY=1

# Signal multiplier (if using multiplier method)
SIGNAL_MULTIPLIER=1

# Account percentage (if using percentage method)
ACCOUNT_PERCENTAGE=5

# ===================================
# RISK MANAGEMENT
# ===================================

# Maximum trades per day
MAX_DAILY_TRADES=10

# Maximum daily loss (in dollars)
MAX_DAILY_LOSS=500

# Enable risk checks before executing trades
ENABLE_RISK_CHECKS=true

# Enable dry-run validation before real orders
ENABLE_DRY_RUN_VALIDATION=true

# ===================================
# ORDER QUEUE SETTINGS
# ===================================

# Maximum concurrent orders
MAX_CONCURRENT_ORDERS=2

# Delay between orders (milliseconds)
DELAY_BETWEEN_ORDERS=500

# Maximum orders per minute
MAX_ORDERS_PER_MINUTE=20

# Priority threshold (0-10, orders >= threshold go to front)
PRIORITY_THRESHOLD=7

# ===================================
# UPDATE SIDECAR (Auto-Updates)
# ===================================

# Enable automatic updates via git
ENABLE_GIT_UPDATES=true

# Enable automatic npm package updates
ENABLE_NPM_UPDATES=true

# Auto-restart after updates
AUTO_RESTART=true

# Update check interval (milliseconds, default: 24 hours)
UPDATE_CHECK_INTERVAL=86400000

# ===================================
# CONFIGURATION MODE
# ===================================

# Set to 'true' for first-time setup
FIRST_RUN=false

# Port for configuration web UI
PORT=3000

# ===================================
# LOGGING
# ===================================

# Log level: info, warn, error, debug
LOG_LEVEL=info

# Enable latency monitoring
ENABLE_LATENCY_MONITORING=true

# ===================================
# NOTES
# ===================================

# To get Discord IDs:
# 1. Enable Developer Mode in Discord (Settings → Advanced → Developer Mode)
# 2. Right-click any server/channel/user → Copy ID

# To create Discord Bot:
# 1. Go to https://discord.com/developers/applications
# 2. Create New Application
# 3. Go to Bot tab → Add Bot
# 4. Copy Bot Token
# 5. Enable these intents:
#    - Server Members Intent
#    - Message Content Intent
# 6. Generate OAuth2 URL with these permissions:
#    - Read Messages/View Channels
#    - Send Messages
#    - Embed Links
#    - Attach Files
#    - Read Message History

# Tastytrade Account Setup:
# 1. Sign up at https://tastyworks.com or https://cert.tastyworks.com (sandbox)
# 2. For production trading, use real credentials
# 3. For testing, request sandbox access from api.support@tastytrade.com
